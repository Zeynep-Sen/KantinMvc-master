@model KantinMvc.Models.OnViewModel.OnViewMarka

<table class="table table-striped">

    <thead>
        <tr>
            <th>Marka Adı</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Markalar)
        {
<tr>
    @if (item.SILINDI == false)
    {
<td>@item.MARKA1</td>
                    <td>
                        <a href="/Marka/MarkaGuncelle/@item.ID" class="btn btn-sm btn-primary">Guncelle</a>
                        <a href="/Marka/MarkaSil/@item.ID" class="btn btn-danger" onclick="return confirm('Bu Markayı silmek istediğinize emin misiniz?')">Sil</a>

                    </td>}
</tr>}


    </tbody>

</table>

