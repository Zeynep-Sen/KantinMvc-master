@model KantinMvc.Models.OnViewModel.OnViewMenu


<table class="table table-striped">

    <thead>
        <tr>
            <th>Menü Başlıkları</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Menuler)
        {
<tr>
         <td>@item.ADI</td>
         <td>
             <a href="/Menu/MenuGuncelle/@item.ID" class="btn btn-sm btn-primary" >Guncelle</a>
             <a href="/Menu/MenuSil/@item.ID" class="btn btn-danger" onclick="return confirm('Bu Menü Başlığını silmek istediğinize emin misiniz?')">Sil</a>

          </td>
</tr>
         }


    </tbody>

</table>